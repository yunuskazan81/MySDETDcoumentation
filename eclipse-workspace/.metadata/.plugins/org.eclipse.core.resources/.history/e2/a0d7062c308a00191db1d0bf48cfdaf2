package com.syntax.testcases;

import org.testng.Assert;
import org.testng.annotations.Test;

import com.syntax.pages.LoginPage;
import com.syntax.utils.BaseClass;
import com.syntax.utils.CommonMethods;
import com.syntax.utils.ConfigsReader;
import com.syntax.utils.Constants;

public class LoginPageTest extends ConfigsReader {

	@Test
	public void loginToOrangeHRM() {
		
		
        String username=ConfigsReader.getProperty("username");
        String password= ConfigsReader.getProperty("password");
        
        
		LoginPage login=new LoginPage();
        
		CommonMethods.sendText(login.username, username);
		CommonMethods.sendText(login.password, password);
		CommonMethods.click(login.btnLogin);
		
		Assert.assertEquals(login.isdisplay, true);
		System.out.println("Logged in succesfully");
		
		
		
		
	}
}